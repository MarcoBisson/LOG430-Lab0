{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "module": "commonjs",
    "rootDir": "src/backend",
    "outDir": "dist/backend",
    "forceConsistentCasingInFileNames": true, /* Ensure that casing is correct in imports. */
    "strict": true, /* Enable all strict type-checking options. */
    "skipLibCheck": true,
  },
  "include": [
    "src/backend/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}