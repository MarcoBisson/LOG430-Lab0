  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist/backend",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "prisma/seed.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
